#include "csapp.h"

static size_t sio_strlen(char *s)
{
	size_t i = 0;
	while(*(s + i) != '\0')
	{
		i++;
	}
	return i;
}

ssize_t sio_puts(char s[]) /* Put string */
{
	return write(STDOUT_FILENO, s, sio_strlen(s));
}

ssize_t sio_putl(long v)
{
	char s[128];

	sio_ltoa(v, s, 10);
	return sio_puts(s);
}

void sio_error(char s[])
{
	sio_puts(s);
	_exit(1);
}

